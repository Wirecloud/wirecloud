<?xml version='1.0' encoding='UTF-8'?>
<widget xmlns="http://wirecloud.conwet.fi.upm.es/ns/macdescription/1" vendor="Wirecloud" name="test" version="0.1">
    <details>
        <title>__MSG_displayName__</title>
        <email>test@example.com</email>

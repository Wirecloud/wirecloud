<?xml version="1.0" encoding="utf-8"?>
<Template xmlns="http://wirecloud.conwet.fi.upm.es/ns/template#">

    <Catalog.ResourceDescription>
        <Vendor>Wirecloud</Vendor>
        <Name>api-test</Name>
        <DisplayName>Wirecloud API test</DisplayName>
        <Version>0.9</Version>
        <Author>aarranz</Author>
        <Mail>aarranz@conwet.com</Mail>
        <Description>This widget is used to test some of the features of the Wirecloud platform</Description>
        <ImageURI>images/catalogue.png</ImageURI>
        <iPhoneImageURI>images/catalogue_iphone.png</iPhoneImageURI>
        <WikiURI>doc/index.html</WikiURI>
    </Catalog.ResourceDescription>

    <Platform.Preferences>
        <Preference name="text" type="text" label="text" description="text preference" default="initial text"/>
    </Platform.Preferences>

    <Platform.Wiring>
        <InputEndpoint name="inputendpoint" type="text" label="Input" friendcode="test-data"/>
        <OutputEndpoint name="outputendpoint" type="text" label="Output" friendcode="test-data"/>
    </Platform.Wiring>

    <Platform.Link>
        <XHTML href="test.html"/>
    </Platform.Link>
    <Platform.Rendering width="6" height="24"/>

</Template>

FROM conwet/jenkins-python:2.7-3.4

MAINTAINER WireCloud Team <wirecloud@conwet.com>

RUN apt-get install -y python-pip python3-pip --no-install-recommends && \
    apt-get install -y libxml2-dev libxslt1-dev zlib1g-dev libffi-dev libssl-dev \
            wkhtmltopdf libpcre3-dev libcurl4-openssl-dev libexif12  \
            postgresql-client libjpeg-dev libfreetype6-dev zlib1g-dev \
            libtiff-dev liblcms2-dev libpq-dev

<?xml version="1.0" ?>
<Template xmlns="http://morfeo-project.org/2007/Template">
    <Catalog.ResourceDescription>
        <Vendor>UPM</Vendor>
        <Name>Wirecloud Context Test</Name>
        <Version>0.1</Version>
        <Author>aarranz</Author>
        <Mail>aarranz@conwet.com</Mail>
        <Description>This gadget is used to test some of the features of the EzWeb platform</Description>
        <ImageURI>images/catalogue.png</ImageURI>
        <iPhoneImageURI>images/catalogue_iphone.png</iPhoneImageURI>
    </Catalog.ResourceDescription>

    <!-- EzWeb Gadgets Tags -->
    <Platform.Preferences>
    </Platform.Preferences>

    <!-- EzWeb Gadget Persistent State -->
    <Platform.StateProperties>
    </Platform.StateProperties>

    <!-- EzWeb Gadget Data Wiring -->
    <Platform.Wiring>
    </Platform.Wiring>
    <Platform.Link>
        <XHTML href="context-test.html"/>
    </Platform.Link>
    <Platform.Rendering height="24" width="6"/>
    <Platform.Context>
        <Context name="language" type="text" concept="language"/>
        <Context name="username" type="text" concept="user_name"/>
        <GadgetContext name="width" type="text" concept="width"/>
        <GadgetContext name="height" type="text" concept="height"/>
        <GadgetContext name="widthInPixels" type="text" concept="widthInPixels"/>
        <GadgetContext name="heightInPixels" type="text" concept="heightInPixels"/>
        <GadgetContext name="lockStatus" type="text" concept="lockStatus"/>
    </Platform.Context>
</Template>
